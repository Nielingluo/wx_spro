.news_container{
  display: flex;
  flex-direction: column;
}
swiper{
  width: 100%;
  height: 440rpx;
}
swiper image{
  width: 100%;
  height: 440rpx;
}
.news_list{
  display: flex;
  flex-direction: column;
  padding: 0 20rpx;
}
.news_item{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  padding: 20rpx 0;
  border-bottom: 1px solid #eee;
}
.news_item text{
  font-size: 22rpx;
  width: 80%;
}
.news_item image{
  width: 84rpx;
  height: 62rpx;
}