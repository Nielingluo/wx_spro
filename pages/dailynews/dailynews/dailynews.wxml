<view class="news_container">
  <swiper indicator-dots='true' autoplay='true'>
    <swiper-item>
      <image src='https://pic2.zhimg.com/v2-9d0206a2c6604e1b51dd1cb9a6d7e5c9.jpg'></image>
    </swiper-item>
    <swiper-item>
      <image src='https://pic2.zhimg.com/v2-eb6c2706f468a036e12f50b7a64ad531.jpg'></image>
    </swiper-item>
  </swiper>
  <block wx:for="{{news}}" wx:for-item="news">
    <view class='news_list' catchtap='onClickTap' data-newsId='{{news.newsId}}' data-name='Hei'>
      <view class="news_item">
        <text>{{news.title}}</text>
        <image src='{{news.newsimages}}'></image>
      </view>
    </view>
  </block>
</view>